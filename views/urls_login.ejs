<body>    
    <h2>Login Page</h2><br>    
    <div class="login">    
    <form id="login" method="POST" action="/login">    
        <label><b>User Name     
        </b>    
        </label>    
        <input type="text" name="email" id="email" placeholder="Username">    
        <br><br>    
        <label><b>Password     
        </b>    
        </label>    
        <input type="Password" name="password" id="password placeholder="Password">    
        <br><br>    
        <button type="submit">Login</button>      
      </form>     
    </div>    
    </body>    
    </html> 